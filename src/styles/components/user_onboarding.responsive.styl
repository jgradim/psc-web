@import "~styles/mixins"

+mobile()
  .UserOnboarding
    width: 100%

    &.name, &.team, &.invites
      margin: 0
      padding: 0

    form
      width: 100%

    .Tabs
      .TabList
        .Tab
          display: none

          &.selected
            display: block

          > *
            display: inline-block

        .selected-indicator
          width: 100% !important
          left: 0 !important
