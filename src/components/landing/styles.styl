@import "~components/variables"

.framed
  $frame-width = 4px

  &:before, &:after
    content: ""
    position: absolute
    width: 83px
    height: 153px

  &:before
    left: -($frame-width)
    top: -($frame-width)
    border-left: $frame-width solid $yellow
    border-top: @border-left

  &:after
    right: -($frame-width)
    bottom: -($frame-width)
    border-right: $frame-width solid $mob-purple
    border-bottom: @border-right

.Landing
  width: calc(100% + 60px)
  margin: -30px
  position: relative

  .LandingHero
    position: relative
    height: 645px
    padding-top: 70px
    background: $mob-green url("~assets/images/landing-hero@2x.jpg") no-repeat center 10px
    background-size: 1366px 632px

    > .content
      height: calc(100% - 30px)

    h1, h2, h3
      text-align: left
      font: normal normal 600 24px/1 Poppins, sans-serif
      font-weight: 600

    h2
      color: $mob-purple
      text-transform: uppercase
      letter-spacing: 1px
    h1
      color: white
      font-size: 64px
    h3
      color: white
      margin-bottom: 60px

    .open-until
      display: block
      margin: 10px 0 0 11px
      color: white

  .LandingSections
    position: absolute
    width: 670px
    height: 55px
    bottom: 0
    left: $content-side-padding

    ul
      height: 100%
      display: flex
      justify-content: space-between

      li
        height: 100%
        background: transparent no-repeat left top

        &.hackathon
          background-image: url("~assets/images/angle-brackets-yellow.svg")
        &.workshops
          background-image: url("~assets/images/comment-yellow.svg")
        &.schedule
          background-image: url("~assets/images/curly-braces-yellow.svg")

      a, a:link, a:visited, a:active, a:hover
        display: block
        width: 100%
        height: 100%
        line-height: 80px
        color: white
        text-decoration: none
        text-transform: uppercase
        letter-spacing: 3px
        padding-top: 15px
        font: normal normal 600 24px Poppins, sans-serif

  section
    position: relative
    padding-top: 100px

    h1, h2
      color: $mob-green
      font: normal normal 600 48px/1 Poppins, sans-serif
    h2
      color: $dark-grey
      font-size: 24px
      text-transform: uppercase
      letter-spacing: 1px

    p
      width: 550px

    p.coming-soon
      width: auto
      color: $mob-purple
      margin: 70px auto
      font: normal normal 600 24px Poppins, sans-serif
      letter-spacing: 1px
      text-transform: uppercase

    //--------------------------------------------------------------- Hackathon
    &#hackathon
      h1, h2
        text-align: left

      ul
        font-size: 16px
        color: $dark-grey
        list-style-type: disc
        padding-left: 20px

        li
          margin-bottom: 5px

      .Button
        margin-top: 30px

      .image
        position: absolute
        top: -170px
        right: 0

        &:before
          position: absolute
          content: ""
          background: $yellow
          width: 100%
          height: 90%
          bottom: -45px
          left: -45px
          zIndex("negative")

    //--------------------------------------------------------------- Workshops
    &#workshops
      p
        text-align: center
        margin-left: auto
        margin-right: auto
        width: 650px

      .workshops
        position: relative
        display: flex
        flex-wrap: wrap
        margin: 80px 0 30px
        @extend .framed

        .workshop
          position: relative
          display: flex
          flex-direction: column
          justify-content: baseline
          align-items: flex-start
          width: 50%
          border: 1px solid $light-grey
          height: 280px
          padding: 70px 30px 0

          $highlight-height = 35px

          &:before, &:after
            content: ""
            display: none
            position: absolute
            width: 40%
            height: $highlight-height
            background: $mob-green

          &:before
            left: -1px
            bottom: -($highlight-height)

          &:after
            right: -1px
            top: -($highlight-height)

          &:hover
            background: $mob-green
            border-color: $mob-green
            cursor: pointer

            &:before, &:after
              display: block

            .date
              color: $mob-purple
            .name, .caret
              color: #ffe200
            .speaker
              color: white

          &:nth-child(even)
            border-left: none
          &:nth-child(n + 3)
            border-top: none

          .date, .name
            font-family: Poppins
            text-transform: uppercase
            font-weight: 700

          .date
            margin-bottom: 10px
            color: $orange
            font-size: 16px

          .name
            margin-bottom: 5px
            color: $mob-purple
            font-size: 20px
            cursor: pointer

          .speaker
            text-transform: uppercase
            color: $label-grey

          .caret
            content: ">"
            position: absolute
            right: 30px
            bottom: 30px
            color: $orange
            font: normal normal 600 32px Poppins, sans-serif

    //--------------------------------------------------------------- Schedule
    &#schedule-section
      $text-indent = 30px

      .content
        background: transparent url("~assets/images/landing-vr-with-paths@2x.png") no-repeat right bottom
        background-size: 50%

      .image
        position: relative
        margin-bottom: 100px

        &:before
          position: absolute
          content: ""
          background: $yellow
          width: 500px
          height: 30px
          top: -(@height)
          right: 0

        img
          width: 100%

      h1, h2
        text-align: left
        text-indent: $text-indent

      h1
        padding-top: 20px

      h2
        margin-bottom: 60px

      h3
        text-align: left
        color: $orange
        text-transform: uppercase
        letter-spacing: 1px
        margin-bottom: 0
        margin-top: 20px

      h4
        text-align: left
        color: $label-grey
        margin: 0 auto 25px
        font-family: Poppins, sans-serif

      .day
        padding-left: $text-indent
        margin-bottom: 50px

        dl
          width: 500px
          overflow: hidden

          dt, dd
            display: block
            float: left
            margin-bottom: 30px

            &:last-of-type
              margin-bottom: 0

            *
              width: auto

          dt
            width: 40%
            clear: left
            color: $darker-grey
            font-size: 16px
            font-weight: 500

          dd
            width: 60%

          h5
            margin: 0
            text-align: left
            color: $mob-purple
            text-transform: uppercase
            font-weight: 600
            font-size: 16px
            letter-spacing: 1px

          p
            margin: 0
            font-size: 14px
            color: $label-grey

    //--------------------------------------------------------------- Join Event
    &#join-event

      .content
        padding-left: 595px
        text-align: center
        min-height: 500px

      .video
        position: absolute
        left: 0
        top: 0
        width: 560px
        height: 420px
        padding-top: 50px
        background: $mob-purple url("~assets/images/landing-join-event@2x.jpg") no-repeat center center
        background-size: cover

        &:after
          content: ""
          position: absolute
          background: $yellow
          width: 85%
          height: 60px
          bottom: -(@height)
          left: 0

      p
        font: normal normal 700 42px/1.3 Poppins, sans-serif
        text-transform: none
        text-align: left
        color: $mob-purple
        margin: 0 auto

        &:first-of-type
          padding-top: 85px
          margin-bottom: 20px
        &:last-of-type
          margin-bottom: 50px

    //--------------------------------------------------------------- Join Slack
    &#join-slack
      margin: 0 0 20px

      .content
        padding: 60px 0 70px
        max-width: 960px
        @extend .framed

        p
          text-align: center
          margin: 30px auto

        form
          max-width: 550px
          margin: 0 auto

          .Button.form
            margin-top: 10px

            img
              vertical-align: -19px

    //--------------------------------------------------------------- Sponsors
    &#prizes
      .content
        position: relative
        padding-bottom: 120px

        .separator
          $width = 1px
          position: absolute
          bottom: 0
          left: 19%
          width: "calc(74% - %s)" % ($content-side-padding * 2)
          height: $width
          background-image: linear-gradient(to right, $orange, $mob-green, $mob-purple)
          zIndex("jump")

          &:before, &:after
            content: ""
            display: block
            position: absolute
            width: $width

          &:before
            bottom: 0
            left: -($width)
            height: 60px
            background: $orange

          &:after
            top: 0
            right: -($width)
            height: 142px
            // background: $mob-purple
            background-image: linear-gradient(to bottom, $mob-purple, $mob-green 60%)

          .ball
            position: absolute
            left: -7px
            top: -71px
            width: 13px
            height: @width
            border: 1px solid $orange
            border-radius: 50%

            &:after
              content: ""
              position: absolute
              left: 2px
              top: 2px
              display: block
              width: 7px
              height: @width
              background: $orange
              border-radius: 50%

      h1, h2
        text-align: left

      h2
        margin-bottom: 50px

      p
        width: auto
        line-height: 1.8

      .prizes
        margin: 100px auto 20px
        display: flex
        align-items: flex-end
        justify-content: space-between

        .prize
          width: 30%
          text-align: center

          img
            max-width: 100%
            max-height: 200px

          h3
            color: $mob-green
            text-transform: uppercase
          &:first-child h3
            color: $orange
          &:last-child h3
            color: $mob-purple

          span
            font-size: 16px

    //--------------------------------------------------------------- Sponsors
    &#sponsors
      .content
        position: relative
        min-height: 800px
        padding-right: 420px


      h1, h2
        text-align: left

      h2
        font-size: 18px

      .image
        position: absolute
        top: 0
        right: 0

      ul
        margin-top: 50px
        text-align: left

        li
          display: inline-block
          width: 25%
          margin-bottom: 80px
          vertical-align: middle

          &:first-child
            margin-left: 12.5%
          &:nth-child(3)
            margin-right: 12.5%
          &:nth-child(4)
            margin-left: 25%
          &:nth-child(5)
            margin-right: 25%

          &:nth-last-child(3)
            margin-left: 12.5%

          a img
            width: 150px

    //--------------------------------------------------------------- Share
    &#share
      text-align: center
      margin-bottom: 50px

      p
        margin: 0 auto
        width: 650px

      .actions
        margin-top: 40px

        .Button
          margin: 0 20px

          &:before
            display: inline-block
            content: ""
            width: 24px
            height: @width
            margin-right: 10px
            background: transparent no-repeat center center
            vertical-align: sub

          &.twitter:before
            background-image: url("~assets/images/twitter-purple.svg")
          &.fb:before
            background-image: url("~assets/images/fb-purple.svg")



