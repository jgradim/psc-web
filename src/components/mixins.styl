//
// media queries

mobile()
  @media screen and (max-width: 480px), screen and (orientation: landscape) and (max-width: 740px)
    {block}

mobile-small()
  @media screen and (max-width: 320px)
    {block}

tablet()
  @media screen and (max-width: 960px)
    {block}

desktop()
  @media screen and (min-width: 961px)
    {block}
