@import "~components/variables"

$border-width = 5px

.DataTable
  position: relative

  .search, .search-bar
    height: 55px
    border-bottom: $border-width solid $mob-purple

  .search
    position: absolute
    top: $border-width
    width: 50px
    right: -@width
    text-align: center
    padding-top: 10px

    img
      cursor: pointer

  .search-bar
    position: absolute
    top: $border-width
    right: $border-width
    width: 0;
    overflow: hidden
    background: white
    padding-top: 2px
    transition: width 0.5s ease-in-out

    &.visible
      width: "calc(100% - %s)" % ($border-width * 2)

    input
      width: 100%
      height: 85%
      border-radius: 5px
      border: 2px solid $mob-purple
      padding: 0 10px
      font: normal normal 500 22px Asap, sans-serif
      color: $mob-purple
      outline: none

  table
    border-collapse: collapse

    td
      border: 5px solid white
      padding: 10px 40px
      vertical-align: middle

    thead
      td
        text-align: center
        border-bottom: $border-width solid $mob-purple
        font: normal normal 500 18px Poppins, sans-serif

        .sort-controls, .filter-controls
          margin-left: 10px

          button
            border: none
            background: none
            outline: none
            padding: 3px 6px
            margin-left: 5px
            cursor: pointer
            font-size: 17px
            color: $light-grey

            &.selected
              color: $mob-purple

    tbody
      tr:nth-child(even) td
        background: rgba($mob-purple, 0.05)
