@import "~components/variables"

$transition-duration = 400ms

.Tabs
  width: 100%
  position: relative

  & ~ *
    margin-top: 20px

  .TabList
    position: relative
    height: 70px
    display: flex
    align-items: center
    justify-content: center
    box-shadow: 0 5px 5px -2px rgba($light-grey, 0.3)

    .selected-indicator
      position: absolute
      bottom: 0
      height: 4px
      background: $mob-purple
      transition: left $transition-duration ease-in-out

    .Tab
      flex-grow: 1
      flex-basis: 0
      display: flex
      align-items: center
      justify-content: center
      flex-direction: column
      height: 100%
      cursor: pointer
      text-align: center
      color: $light-grey
      padding-bottom: 4px // compensate for the .selected-indicator element
      transition: color $transition-duration ease-in-out
      
      // index indicator
      &:before
        display: none
        content: attr(data-step)
        width: 30px
        height: @width
        line-height: @height
        text-align: center
        color: white
        background: $mob-purple
        border-radius: 50%
        margin-right: 10px
        vertical-align: baseline

      &.selected
        color: $dark-grey
        // border-bottom-color: $mob-purple

      > *
        display: block

        &:first-child
          font: normal normal 300 18px Rokkitt, serif

        &:last-child
          font: normal normal 600 28px Rokkitt, serif

  .Panel
    display: none
    padding: 20px
    border: 1px solid $light-grey
    border-top: none

    &.selected
      display: block

  &.show-index
    .Tab
      flex-direction: row
      &:before
        display: inline-block

  &.tabs-disabled
    .Tab
      cursor: auto

  &.green
    .selected-indicator,
    .Tab:before
      background: $mob-green

  &.small
    .Tab > *
      &:first-child, &:last-child
        font-size: 20px
      
    
