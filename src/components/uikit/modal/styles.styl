@import "~components/variables"

.Modal
  position: fixed
  width: 100vw
  height: 100vh
  top: 0
  left: 0
  display: none
  zIndex("modal")
  margin: 0 !important

  &.open
    display: block

  .modal-overlay
    width: 100%
    height: 100%
    background: rgba(black, 0.7)
    display: flex
    justify-content: center
    align-items: center
    flex-direction: column

    .title, .modal-content
      width: 700px

    .modal-content
      max-height: 80%
      border-radius: 0 0 5px 5px
      background: white
      overflow: hidden
      overflow-y: auto
      padding: 30px 60px

    .title
      position: relative
      height: 50px
      line-height: 50px
      font-size: 18px
      font-weight: 500
      background: $mob-purple
      color: white
      margin: 0
      border-radius: 5px 5px 0 0

      .close
        position: absolute
        right: 20px
        font-weight: 400
        font-size: 32px
        cursor: pointer
