@import "~components/variables"

.Workshop
  position: relative

  h1, h2, h3, h4, h5, h6
    text-align: left

  .attending-badge
    display: inline-block
    margin-left: 10px
    padding: 5px 10px
    font-size: 16px
    background: $orange
    color: white
    border-radius: 5px
    vertical-align: text-bottom

  .actions
    margin-top: 50px
    p
      font-size: 14px
      color: $label-grey
      text-align: center
      margin: 0

  ul
    list-style: disc
    padding-left: 17px

    li
      font-size: 16px
      color: $text-grey

  .actions
    .Button
      width: 50%
